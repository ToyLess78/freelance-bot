{
  "name": "freelancehunt-bot",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Telegram bot for FreelanceHunt project monitoring",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently -n \"build,app\" -c \"blue,green\" \"esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --watch=forever\" \"sleep 2 && nodemon dist/index.js\"",
    "dev:safe": "npm run build && concurrently -n \"build,app\" -c \"blue,green\" \"esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --watch=forever\" \"nodemon dist/index.js\"",
    "build": "mkdir -p dist && esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js",
    "start": "node dist/index.js",
    "clean": "rm -rf node_modules dist .pnpm-store pnpm-lock.yaml",
    "fresh-install": "pnpm run clean && pnpm install"
  },
  "keywords": [
    "telegram",
    "bot",
    "freelancehunt",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "node-telegram-bot-api": "^0.66.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/xml2js": "^0.4.14",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.8",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "overrides": {
      "form-data": "^4.0.0",
      "tough-cookie": "^5.0.0",
      "request": "^2.88.2"
    }
  },
  "packageManager": "pnpm@10.14.0"
}
