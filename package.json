{
  "name": "freelancehunt-bot",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Telegram bot for FreelanceHunt project monitoring",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --watch=forever\" \"nodemon dist/index.js\"",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js",
    "start": "node dist/index.js",
    "clean": "rm -rf node_modules dist .pnpm-store pnpm-lock.yaml",
    "fresh-install": "pnpm run clean && pnpm install"
  },
  "keywords": [
    "telegram",
    "bot",
    "freelancehunt",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.7",
    "node-telegram-bot-api": "^0.66.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/xml2js": "^0.4.14",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "overrides": {
      "tough-cookie@<4.1.3": ">=4.1.3",
      "esbuild@<=0.24.2": ">=0.25.0",
      "form-data@<2.5.4": ">=2.5.4"
    }
  }
}
